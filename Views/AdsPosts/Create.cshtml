                            <span asp-validation-for="Price_IsDealable" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="LogoUrl" class="form-check-label"></label>
                <input asp-for="LogoUrl" class="form-control" />
